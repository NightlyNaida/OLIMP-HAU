.head-constructor-title
    color white

.constructor-container
    display grid
    grid-template-rows 300px 70px

.constructor-view-container
    width 3180px
    height 800px
    position relative
    transform scale(.35)
    transform-origin left top

.constructor-view-grid
    width 100%
    height 100%
    position absolute

.constructor-view-grid-line
    background-color cyan
    position absolute

.constructor-view-grid-line-hr-top
    width 100%
    height 3px
    top 180px

.constructor-view-grid-line-hr-bottom
    width 100%
    height 3px
    top 470px

    
.constructor-cell-view
    overflow hidden

.constructor-view-background
    width inherit
    height inherit

.constructor-view-logo
    position absolute
    height 300px

.constructor-controls-label
    color white

.load-gif-container
    position relative
    display flex
    justify-content center

.load-gif-img
    width 400px

.load-gif-caption
    position absolute
    font-size 20px
    text-align center

.ready-head
    width 800px

.constructor-controls
    display grid
    grid-template-columns repeat(4, 300px) 170px
    grid-gap 25px

.constructor-controls > div
    display flex
    flex-direction column

.ready-headers-container
    border 1px solid white
    border-radius 20px
    margin 20px

.ready-headers-caption
    color white
    font-weight 600
    font-size 18px
    text-align center

.logo-loader-ok
    display flex
    justify-content center
    flex-direction column

.logo-loader-ok-caption
    text-align center
    color white
    font-weight 600
    font-size 18px

